<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <h1 class="col-6 offset-2">SingUp on WanderLa</h1>
  <div class="col-6 offset-3">
    <form action="/singup" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Thank You</div>
        <div class="invalid-feedback">Please provide Your Username.</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          name="email"
          id="email"
          type="email"
          class="form-control"
          required
        />
        <div class="valid-feedback">Thank You</div>
        <div class="invalid-feedback">Please provide Your Email</div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
        <div class="valid-feedback">Thank You</div>
        <div class="invalid-feedback">Please provide Your Password</div>
      </div>
      <button class="btn btn-success">SingUp</button>
    </div>
    </form>
  </div>
</div>
