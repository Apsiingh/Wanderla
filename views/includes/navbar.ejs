<style>
  .btn-search {
    background-color: #fe424d;
    color: #fff;
    display: inline;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }
  .btn-search:hover {
    background-color: #fe424d;
    color: #000000;
    box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);
  }
  .btn-search i {
    display: inline;
    margin-right: 0.5rem;
  }
  .btn-auth {
    color: white !important ;
    background-color: #fe424d;
    margin-right: 1rem;
    border-radius: 25px;
    font-size: 1.3rem;
    font-weight: 800 !important;
  }
  .btn-auth:hover {
    color: black !important;
    box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);
  }
  .search-input {
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
  }
</style>
<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"
      ><i class="fa-solid fa-hanukiah fa-flip-horizontal"></i
    ></a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>
      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search">
          <input
            class="form-control me-2 search-input"
            type="search"
            placeholder="Search  Destinations"
            aria-label="Search"
          />
          <button class="btn btn-search" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>
      <div
        class="navbar-nav ms-auto"
        style="display: flex; align-items: center; justify-content: center"
      >
        <a class="nav-link" href="/listings/new">AirBnb Your Home</a>
        <% if(!currUser) { %>
        <a class="nav-link btn-auth" aria-current="page" href="/signup"
          >Signup</a
        >
        <a class="nav-link btn-auth" href="/login">Login</a>
        <% } %> <% if(currUser) { %>
        <a class="nav-link btn-auth" href="/logout">Logout :<%= currUser.username  %></a>
        <%} %>
      </div>
    </div>
  </div>
</nav>
